{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "lib": ["dom", "dom.iterable", "esnext"],
    // "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },

  // "files": ["./node_modules/wmr/types.d.ts"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "declaration.d.ts"],
  "exclude": ["node_modules"]
}
